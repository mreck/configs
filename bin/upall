#!/bin/sh

if [ "$(uname)" = 'Linux' ] && [ ! -z "$(which apt)" ]; then
	echo "[*] Running apt update..."
	sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y
fi

if [ "$(uname)" = 'Darwin' ] && [ ! -z "$(which brew)" ]; then
	echo "[*] Running brew update..."
	brew update && brew upgrade
fi
