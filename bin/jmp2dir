#!/bin/sh


CACHE_FILE="$HOME/.cache/jmp2dir/dirs"

update_cache() {
        mkdir -p "$(dirname "$CACHE_FILE")"
        echo "$JMP2DIR" \
                | tr ':' '\n' \
                | xargs -I{} find {} -type d -mindepth 1 -maxdepth 1 \
                > "$CACHE_FILE"
}

list_dirs() {
        cat "$CACHE_FILE"
}

jump() {
        # @TODO: use fzf query
        DIR=$(cat "$CACHE_FILE" | fzf)
        echo "$DIR"
        [ ! -z "$DIR"] && cd "$DIR"
}
 
case "$1" in 
        -r | --reload )
                update_cache
                ;;
        -l | --list )
                list_dirs
                ;;
        * )
                jump
                ;;
esac
